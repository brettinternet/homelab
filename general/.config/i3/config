# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# -- Defaults ----------------------------------------

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Latin Modern Roman 8


# -- Borders ----------------------------------------

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 3
default_floating_border none

# Hide borders
hide_edge_borders smart

title_align center
for_window [class=".*"] title_format <span>%class - %title</span>
#
# Disables all borders
#for_window [class=".*"] border pixel 0


# -- Applications ----------------------------------------

# Start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# Application menu
bindsym $mod+d --release exec --no-startup-id controlCenter -r
# Power menu
bindsym $mod+Ctrl+q --release exec --no-startup-id controlCenter -p
# Clipboard menu
bindsym $mod+c --release exec --no-startup-id controlCenter -c
bindsym $mod+Ctrl+c exec --no-startup-id clipboardClear
bindsym $mod+Shift+c exec --no-startup-id clipboardPause
# Web search
bindsym $mod+s --release exec --no-startup-id controlCenter -b
# Window navigation
bindsym $mod+e --release exec --no-startup-id controlCenter -w
# Emoji selection
bindsym $mod+Shift+period --release exec --no-startup-id controlCenter -e

# Sound mixer
bindsym $mod+Ctrl+m exec pavucontrol
# Bluetooth controller
bindsym $mod+Ctrl+n exec blueman-manager

# Restart dunst
bindsym $mod+Ctrl+d --release exec --no-startup-id pkill dunst && dunst &
bindsym $mod+t exec --no-startup-id pkill picom; exec notify-send -a 'system' 'Picom stopped' -r '2348'
bindsym $mod+Ctrl+t exec --no-startup-id picom --experimental-backends -b; exec notify-send -a 'system' 'Picom started' -r '2348'

# Take a screenshot
bindsym Print --release exec --no-startup-id scrot 'screenshot_%Y-%m-%d_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Downloads/' && notify-send -a 'system' 'Scrot' 'Screenshot captured'
# Take a screenshot and open it with gimp
bindsym $mod+Print --release exec --no-startup-id scrot 'screenshot_%Y-%m-%d_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Downloads/ && gimp ~/Downloads/$f &' && notify-send -a 'system' 'Scrot' 'Screenshot captured'
# Select a window
bindsym $mod+Shift+Print --release exec --no-startup-id scrot 'screenshot_%Y-%m-%d_%H-%M-%S_$wx$h.png' -s -e 'mv $f ~/Downloads/ && gimp ~/Downloads/$f &' && notify-send -a 'system' 'Scrot' 'Screenshot captured of selected window'
# Wait 5 seconds before screenshot
bindsym $mod+Ctrl+Print --release exec --no-startup-id scrot 'screenshot_%Y-%m-%d_%H-%M-%S_$wx$h.png' -d 5 -e 'mv $f ~/Downloads/ && gimp ~/Downloads/$f &' && notify-send -a 'system' 'Scrot' 'Screenshot captured of selected window'


# -- Applications ----------------------------------------

set $TERMINAL alacritty
set $BROWSER firefox
set $BROWSER1 Chromium
set $BROWSER2 Google-chrome
set $PLAYER Spotify

# Scratchpad
bindsym $mod+Shift+semicolon move scratchpad
for_window [instance="^$TERMINAL-scratchpad1$"] move scratchpad, resize set 50 ppt 60 ppt
for_window [instance="^$TERMINAL-scratchpad2$"] move scratchpad, resize set 600 px 100 ppt, move position 0 px 0 px, sticky enable # , resize shrink down 22 px
for_window [class="$PLAYER"] move scratchpad, move position center

bindsym $mod+semicolon [instance="^$TERMINAL-scratchpad1$"] scratchpad show, move position center
bindsym $mod+apostrophe [instance="^$TERMINAL-scratchpad2$"] scratchpad show
bindsym $mod+a [class="$BROWSER1"] scratchpad show, resize set 60 ppt 70 ppt, move position center
bindsym $mod+Shift+a [class="$BROWSER2"] scratchpad show, resize set 95 ppt 95 ppt, move position center
bindsym $mod+w [class="$PLAYER"] scratchpad show

# Floating
for_window [window_role="pop-up"] floating enable
for_window [window_type="dialog"] floating enable border pixel 3
for_window [window_type="utility"] floating enable border pixel 3
for_window [window_type="popup_menu"] floating enable border normal
for_window [window_type="notify"] floating enable border none
for_window [class="Pavucontrol"] floating enable border normal
for_window [class="Blueman-manager"] floating enable border normal
for_window [class="Blueman-services"] floating enable border normal
for_window [class="Solaar"] floating enable border normal
for_window [class="Arandr"] floating enable border normal
for_window [class="Nvidia-settings"] floating enable border normal
for_window [class="Nemo"] floating enable
for_window [class="feh"] floating enable
for_window [instance="guvcview"] floating enable
for_window [class="Hardinfo"] floating enable
for_window [class="zoom"] floating enable
for_window [class="qv4l2"] floating enable
for_window [class="Tlp-UI"] floating enable
for_window [class="fontforge"] floating enable
for_window [class="Thunderbird" title="Address Book"] floating enable
for_window [title="XBindKey: Hit a key"] floating enable
for_window [instance="Places" class="firefox"] floating enable
for_window [class="Virt-manager"] floating enable
for_window [class="Network Connections"] floating enable
for_window [class="opensnitch-ui"] floating enable
for_window [class="kgpg"] floating enable

# Quick launcher
set $mode_launcher Launch: [a]lacritty [f]irefox [c]hromium [s]potify c[o]de [n]emo a[u]thy [t]hunderbird [p]eek
bindsym $mod+Shift+d mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym a exec alacritty, mode "default"
    bindsym f exec firefox, mode "default"
    bindsym c exec chromium, mode "default"
    bindsym s exec spotify, mode "default"
    bindsym o exec code, mode "default"
    bindsym n exec nemo, mode "default"
    bindsym u exec authy, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+Shift+d mode "default"
}

# -- Navigation ----------------------------------------

# Cycle workspaces
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output
bindsym $mod+Ctrl+l workspace next_on_output
bindsym $mod+Ctrl+h workspace prev_on_output
bindsym $mod+Ctrl+j workspace next
bindsym $mod+Ctrl+k workspace prev

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

## alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

## alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth


# -- Windows ----------------------------------------

# Kill focused window
bindsym $mod+Shift+q kill

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# split orientation
bindsym $mod+Shift+plus split h
bindsym $mod+plus split v
bindsym $mod+minus split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

set $SYSTEM_DUNST_ID 823491
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+p layout toggle split; exec dunstify -r $SYSTEM_DUNST_ID -a 'system' 'i3' 'split mode'
bindsym $mod+o layout stacking; exec dunstify -r $SYSTEM_DUNST_ID -a 'system' 'i3' 'stacked mode'
bindsym $mod+i layout tabbed; exec dunstify -r $SYSTEM_DUNST_ID -a 'system' 'i3' 'tabbed mode'

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+Shift+a focus child

# toggle sticky
# https://bbs.archlinux.org/viewtopic.php?pid=920994#p920994
bindsym $mod+Shift+s sticky toggle; exec TARGET_WINDOW="$(xprop -id $(xprop -root _NET_ACTIVE_WINDOW | cut -d ' ' -f 5) | awk '/WM_CLASS/{print $4}' | sed 's/\"//g')" && notify-send -a 'system' 'i3' "sticky toggle: $TARGET_WINDOW"

#navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "♪"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# switch to workspace with urgent window automatically
#for_window [urgent=latest] focus

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


# -- Colors ----------------------------------------

#                       border  backgr. text    indicator child_border
client.focused          #ebdbb2 #282828 #ebdbb2 #d79921   #ebdbb2
client.focused_inactive #504945 #928374 #282828 #1d2021   #1d2021
client.unfocused        #282828 #282828 #ebdbb2 #1d2021   #1d2021
client.urgent           #fb4934 #900000 #ebdbb2 #fb4934   #fb4934
client.placeholder      #282828 #ffffff #ebdbb2 #1d2021   #1d2021

client.background       #ffffff


# -- Bar ----------------------------------------

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar -t
    status_command i3status
    position top
    mode hide

    # https://i3wm.org/docs/userguide.html#_named_workspaces
    strip_workspace_numbers yes

    tray_output primary
    tray_padding 5

    font pango:Latin Modern Mono 8
    separator_symbol " "

    colors {
        background #282828AA
        statusline #fbf1c7
        separator  #504945

        #                  border  backgr. text
        focused_workspace  #282828AA #8ec07c #282828
        active_workspace   #282828AA #d79921 #282828
        inactive_workspace #282828AA #3c3836 #d5c4a1
        binding_mode       #b16286 #b16286 #fbf1c7
        urgent_workspace   #cc241d #cc241d #282828
    }
}


# -- System ----------------------------------------

# hide/unhide i3status bar
bindsym $mod+Shift+m bar mode toggle

# reload the configuration file
#bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3 and end the X session?' -B 'Exit' 'i3-msg exit'"

# System
bindsym $mod+shift+x exec lock

# -- Gaps ----------------------------------------

gaps inner 14
gaps outer -2

# Smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

# Press $mod+Shift+g to enter the gap mode. Choose o or i for modifying outer/inner gaps. Press one of + / - (in-/decrement for current workspace) or 0 (remove gaps for current workspace). If you also press Shift with these keys, the change will be global for all workspaces.
set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

